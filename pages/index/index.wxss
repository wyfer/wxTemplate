/**index.wxss**/
page{
    width: 100%;
    height: 100%;
}

.hy-container{
    height: 100%;
    width: 100%;
    padding: 0;
    margin: 0;
    text-align: left;
    position: relative;
    z-index: 0;
}


.hy-cell{
    width: 100%;
    height: auto;
    background: #fff;
    margin-top: 40rpx;
    box-shadow: 0 0 40rpx rgba(200,200,200,.2)
}

.hy-cell .hy-cell-title{
    font-size: 32rpx;
    text-align: left;
    line-height: 85rpx;
    padding: 0 0 0 70rpx;
    background: #fff;
    position: relative;
}
.hy-cell .hy-cell-title .inset{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 26rpx;
    left: 30rpx;
}

.hy-cell .hy-cell-more{
    height: 85rpx;
    width: 150rpx;
    text-align: right;
    padding-right: 30rpx;
    font-size: 25rpx;
    line-height: 85rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.hy-cell .hy-cell-more image{
    margin-left: 10rpx;
    position: relative;
    top: 2rpx;
    width: 20rpx;
    height: 20rpx;
}

.hy-cell .hy-cell-cont-inset{
    width: 100%;
    height: auto;
    background: #f5f5f5;
}

.hy-cell .hy-cell-cont-inset .insert-item{
    width: 100%;
    display: flex;
    padding: 10rpx 30rpx;
    background: #ffffff;
    margin-top: 10rpx;
}
.hy-cell .hy-cell-cont-inset .pic{
    width: 222rpx;
    height: 146rpx;
    border-radius: 30rpx;
}

.hy-cell .hy-cell-cont-inset .insert-item-cont{
    flex: 1;
    text-align: left;
    padding: 0 30rpx;
}

.hy-cell .hy-cell-cont-inset .insert-item-cont .item-title{
    margin-top: 6rpx;
    font-size: 28rpx;
}
.hy-cell .hy-cell-cont-inset .insert-item-cont .item-record{
    font-size: 25rpx;
}
.hy-cell .hy-cell-cont-inset .insert-item-cont .item-record image{
    width: 22rpx;
    height: 22rpx;
}
.hy-cell .hy-cell-cont-inset .insert-item-cont .item-record .insert-item-rl{
    color: #2d8cf0;
    margin: 0 0 0 20rpx;
    font-weight: 600;
    font-size: 35rpx;
    padding: 0;
}
.hy-cell .hy-cell-cont-inset .insert-item-cont .item-data{
    font-size: 21rpx;
    margin-top: 15rpx;
}
.hy-cell .hy-cell-cont-inset .insert-item-cont .item-data .insert-data-card{
    color: #06A8FE;
}
.hy-cell .hy-cell-cont-inset .insert-item-cont .item-data .insert-data-mor{
    color: #FF9900;
}

.hy-cell .hy-cell-title-2{
    font-size: 32rpx;
    text-align: center;
    line-height: 85rpx;
    padding: 0;
    background: #fff;
    position: relative;
    font-weight: 400;
}

.hy-cell .hy-cell-title-2 .left-icon{
    width: 55rpx;
    height: 20rpx;
}

.hy-cell .hy-cell-title-2 .right-icon{
    width: 55rpx;
    height: 20rpx;
}

.hy-cell .hy-cell-cont{
    padding: 0 10rpx 20rpx 10rpx;
    display: flex;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    width: 750rpx;
    align-items: center;
    margin-top: 10rpx;
    justify-content: flex-start;
    background: #ffffff;
}

.hy-cell .hy-cell-cont .item {
    flex: 1;
    flex-shrink:0;
    width: 290rpx;
    min-width: 290rpx;
    max-width: 290rpx;
    display: block;
    /*padding: 30rpx 0 30rpx 30rpx;*/
    padding: 0;
    margin-left: 20rpx;
    border-radius: 10rpx;
    position: relative;
}

.hy-cell .hy-cell-cont image {
    display: block;
    width: 100%;
    height: 181rpx;
    border-radius: 30rpx 30rpx 0 0;
    margin: 0 auto;
}

.hy-cell .hy-cell-cont .item-dis{
    width: 100%;
    height: 60rpx;
    font-size: 22rpx;
    line-height: 60rpx;
    text-align: left;
    padding-left: 15rpx;
    display: flex;
    justify-content: space-between;
    box-shadow: 0 0 20rpx rgba(200,200,200,.4)
}

.hy-cell .hy-cell-cont .item-msg{
    position: absolute;
    bottom: 60rpx;
    left: 0;
    padding: 5rpx 15rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.hy-cell .hy-cell-cont .item-msg .item-msg-title{
    font-size: 26rpx;
    width: 160rpx;
    color: #ffffff;
    text-align: left;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}

.hy-cell .hy-cell-cont .item-msg .item-msg-days{
    font-size: 20rpx;
    color: #ffffff;
}

.hy-cell .hy-cell-cont .item-msg .item-msg-days text{
    font-size: 28rpx;
    color: #ffffff;
}

.hy-cell .hy-cell-cont .title {
    display: block;
    font-size: 26rpx;
    text-align: left;
    margin: 10rpx auto;
    line-height: 1;
    color: #272b35;
    padding: 0 10rpx;
    box-shadow: 0 0 20rpx rgba(200,200,200,.2)
}

.hy-cell .hy-cell-cont .item-dis .insert-data-card{
    color: #06A8FE;
}
.hy-cell .hy-cell-cont .item-dis .insert-data-mor{
    color: #FF9900;
}

.share-btn{
    color: rgba(0,0,0,0);
    background-color: rgba(0,0,0,0);
    display: inline;
    margin: 0;
    padding: 0;
    box-sizing:border-box;
    font-size:18px;
    text-align:center;
    text-decoration:none;
    line-height:2.55555556;
    border-radius: none;
    -webkit-tap-highlight-color:transparent;
    overflow:hidden;

}
.share-btn::after{
    border: none;
}