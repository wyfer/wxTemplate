/* pages/login/login.wxss */

page{
    width: 100%;
    height: 100%;
    position: relative;
    background: #ffffff;
}

button::after{ border: none; }

.content {
    padding-top: 50rpx;
    margin-left: 50rpx;
    margin-bottom: 20rpx;
    font-size: 30rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 25rpx;
    font-size: 24rpx;
}

.login-btn{
    width: 90%;
    margin: 0 auto;
    height: auto;
}

.bottom {
    border-radius: 50rpx;
    /*margin: 25rpx 50rpx;*/
    padding: 5px 0;
    margin: 25rpx 50rpx;
    font-size: 30rpx;
}

.phone-btn{
    background: #ffffff;
    padding: 5px 0;
    margin: 40rpx 125rpx;
    font-size: 30rpx;
    text-align: center;
}

.green-color{
    color: #ffffff;
    background-color: #06A8FE;
    box-shadow: 0 0 50rpx rgba(6,168,254,.2);
    /*text-shadow: 1rpx 5rpx 5rpx rgba(255,255,255, .1);*/
    font-weight: 600;
    position: relative;
}

.btn-icon{
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    left: 20rpx;
    top: 30rpx;
}

.white-color::after {
    border: 0;
}

.white-color{
    color: #000;
    background-color: #ffffff;
    box-shadow: 5rpx 20rpx 20rpx rgba(18,150,219,.1);
    text-shadow: 1rpx 5rpx 5rpx rgba(0,0,0, .1);
}


.info{

    margin-left: 50rpx;
    font-size: 23rpx;
    margin-top: 10rpx;
}

