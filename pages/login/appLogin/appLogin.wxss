/* pages/login/appLogin/appLogin.wxss */
@import "../login.wxss";
@import "../phoneLogin/phoneLogin.wxss";

.app-logo{
    width:200rpx;
    height:auto;
    margin:0 auto 50rpx auto;
    padding-top:120rpx;
}

.app-tabs{
    width: 100%;
    height: 113rpx;
    text-align: center;
    display: flex;
    align-items: center;
    flex-flow: row nowrap;
    justify-content: start;
}

.app-tabs .app-tab{
    flex: 1;
    width: 50%;
    padding: 0 10rpx;
}
.app-tabs .left-tab{
    text-align: right;
    margin-right: 30rpx;
}
.app-tabs .right-tab{
    text-align: left;
    margin-left: 30rpx;
}
.app-tabs .app-tab text{
    padding: 10rpx 30rpx 30rpx 30rpx;
    margin: 0 auto;
    font-size: 30rpx;
    font-weight: 400;
}
.app-tabs .active > text{
    color: #1EB1FE;
    border-bottom:  solid 4rpx #1EB1FE
}

.app-cont{
    width: 100%;
    height: auto;
    margin-top: 30rpx;
}